<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.campuslostsearch.mapper.BlacklistMapper">
    <insert id="insert" parameterType="Blacklist">
        INSERT INTO blacklist (
            blacklist_id, user_id, reason, type, create_time
        ) VALUES (
            #{blacklistId}, #{userId}, #{reason}, #{type}, #{createTime}
        )
    </insert>
    
    <resultMap id="BlacklistResultMap" type="Blacklist">
        <id property="blacklistId" column="blacklist_id"/>
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="reason" column="reason"/>
        <result property="type" column="type"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    
    <select id="findAll" resultMap="BlacklistResultMap">
        SELECT b.*, u.username
        FROM blacklist b
        JOIN user u ON b.user_id = u.user_id
        ORDER BY b.create_time DESC
        LIMIT #{offset}, #{limit}
    </select>
    
    <select id="countAll" resultType="Long">
        SELECT COUNT(*) FROM blacklist
    </select>
    
    <select id="findByUserId" resultMap="BlacklistResultMap">
        SELECT b.*, u.username
        FROM blacklist b
        JOIN user u ON b.user_id = u.user_id
        WHERE b.user_id = #{userId}
    </select>
</mapper> 